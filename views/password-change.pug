html 
    head 
        title Şifre Değiştir
        link(rel="stylesheet", href="/public/css/app.css")
    body 
        form(action="/users/password/change", method="POST")            
            div(class="loginForm") 
                - if (error)
                    div(class="alert-danger mb-4")
                        p= error

                - if (success)
                    div(class="alert-success mb-4")
                        p= success
                h1(class="text-center text-2xl font-semibold") Şifre Değiştir
                input(type="hidden" name="csrf_token" value=csrf)
                div(class="flex flex-col mt-4") 
                    label Eski Şifre
                    input(type="password" name="old_password" class="mt-4 font-semibold" placeholder="Eski şifre giriniz." required)
                div(class="flex flex-col mt-4")
                    label Yeni Şifre
                    input(type="password" name="new_password" class="mt-4 font-semibold" placeholder="Yeni şifre giriniz." required)
                div(class="flex flex-col mt-4")
                    label Yeni Şifre Tekrar
                    input(type="password" name="new_password_again" class="mt-4 font-semibold" placeholder="Yeni şifre tekrar giriniz." required)
                button(class="button mt-4") Şifre Değiştir
                a(href="/users/dashboard") Geri 